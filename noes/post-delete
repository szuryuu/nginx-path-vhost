#!/usr/bin/env bash
set -eo pipefail
[[ $DOKKU_TRACE ]] && set -x
source "$PLUGIN_CORE_AVAILABLE_PATH/common/property-functions"
_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
source "$_DIR/functions"

trigger-nginx-path-vhosts-post-delete() {
  declare desc="nginx-path-vhosts post-delete trigger"
  declare trigger="post-delete"
  declare APP="$1"

  fn-plugin-property-destroy "nginx-path" "$APP"
  if fn-nginx-path-vhosts-nginx-path-is-running; then
    restart_nginx "$@" >/dev/null
  fi
  rm -rf "${DOKKU_LIB_ROOT}/data/$PROXY_NAME/app-$APP"
}

# trigger-nginx-path-vhosts-post-delete "$@"
echo "post-delete" "$@"
