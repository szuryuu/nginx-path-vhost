#!/usr/bin/env bash
set -eo pipefail
[[ $DOKKU_TRACE ]] && set -x
source "$PLUGIN_CORE_AVAILABLE_PATH/common/functions"

trigger-nginx-path-vhosts-proxy-enable() {
  declare desc="enable nginx proxy"
  declare trigger="proxy-enable"
  declare APP="$1"

  if [[ "$(plugn trigger proxy-type "$APP")" == "nginx-path" ]]; then
    plugn trigger domains-enable "$APP" "false"
    plugn trigger app-restart "$APP"
  fi
}

# trigger-nginx-path-vhosts-proxy-enable "$@"
echo "proxy-enable" "$@"
